@model Checkmate.Models.LoginForm

@{
    ViewData["Title"] = "Login";
}

<h3>Connexion</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Nom d'utilisateur ou email</label>
                <input asp-for="Username" class="form-control"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Mot de passe</label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["error"]
                </div>
            }
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-sm">
                    <i class="fa-regular fa-chess-queen"></i>
                    Se connecter
                </button>
            </div>
        </form>
    </div>
</div>


