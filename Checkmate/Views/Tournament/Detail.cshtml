@model Checkmate.Entity.Tournament

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div>
    <h4>TournamentDetailModel</h4>
    <a class="nav-link text-dark" asp-area="" asp-controller="Tournament" asp-action="Create">S'inscrire à ce tournoi</a>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nom :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Lieu :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Place)
        </dd>
        <dt class = "col-sm-2">
            Nombre de joueurs :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NbPlayer) / @Model.MaxPlayer
        </dd>
        <dt class = "col-sm-2">
            Elo minimum :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinElo)
        </dd>
        <dt class = "col-sm-2">
            Elo maximum :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxElo)
        </dd>
        <dt class = "col-sm-2">
            Status :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Limite d'inscription :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CloseDate)
        </dd>
        <dt class = "col-sm-2">
            Ronde courante :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentRound)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-sm btn-success" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i>
    </a>
    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@Model.Id">
        <i class="fa fa-pencil-square"></i>
    </a>
    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@Model.Id">
        <i class="fa fa-trash"></i>
    </a>
    
</div>
