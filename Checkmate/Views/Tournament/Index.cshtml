@model List<TournamentIndexModel>

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Tournament" asp-action="Create">Creer un nouveau tournoi</a>
        </li>
    </ul>
</div>
<div>
    <h3>Liste des tournois</h3>
</div>
<table class="table table-bordered">
     <thead>
         <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Lieu</th> 
            @* <th>Nombre de joueurs inscrit</th>  *@
            <th>Min</th>
            <th>Max</th>
            <th>Catégories</th>
            <th>Elo min</th>
            <th>Elo max</th>
            <th>Status</th>
            <th>Limite inscription</th>
            <th>Ronde</th>
            <th></th> 
         </tr> 
     </thead> 
     <tbody> 
         @foreach (var item in Model) 
         { 
             <tr> 
                <td>@item.Id</td> 
                <td>@item.Name</td>
                <td>@item.Place</td> 
                <td>@item.MinPlayer</td>
                <td>@item.MaxPlayer</td>
                <td>@string.Join(" - ", item.Categories)</td>
                <td>@item.MinElo</td>
                <td>@item.MaxElo</td>
                <td>@item.Status</td>
                <td>@item.CloseDate</td>
                <td>@item.CurrentRound</td>
                <td>
                    <a class="btn btn-sm btn-success" asp-action="Detail" asp-route-id="@item.Id">
                        <i class="fa-sharp fa-solid fa-eye"></i>
                    </a>
                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa fa-pencil-square"></i>
                    </a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr> 
         } 
     </tbody> 
</table>